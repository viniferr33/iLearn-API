{
  "openapi": "3.0.0",
  "info": {
    "title": "iLearn API",
    "version": "1.0.0"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Student": {
        "type": "object",
        "required": ["id", "name", "email", "phone"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "The unique identifier for a student"
          },
          "name": {
            "type": "string",
            "description": "The name of the student"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "The email address of the student"
          },
          "phone": {
            "type": "string",
            "format": "phone",
            "description": "The phone number of the student"
          }
        },
        "example": {
          "id": 1,
          "name": "John Doe",
          "email": "john.doe@example.com",
          "phone": "4002-8922"
        }
      },
      "StudentInput": {
        "type": "object",
        "required": ["name", "email", "phone", "password"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the student"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "The email address of the student"
          },
          "phone": {
            "type": "string",
            "format": "phone",
            "description": "The phone number of the student"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "The password of the student"
          }
        },
        "example": {
          "name": "John Doe",
          "email": "john.doe@example.com",
          "phone": "4002-8922",
          "password": "this1s4strongP@ssword"
        }
      },
      "HelpRequest": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "studentId",
          "status",
          "category"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "studentId": {
            "type": "integer",
            "format": "int64"
          },
          "status": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "HelpRequestInput": {
        "type": "object",
        "required": ["title", "description", "studentId", "category"],
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "studentId": {
            "type": "integer",
            "format": "int64"
          },
          "category": {
            "type": "string"
          }
        }
      },
      "Offer": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "studentId",
          "status",
          "price",
          "category"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "studentId": {
            "type": "integer",
            "format": "int64"
          },
          "price": {
            "type": "float",
            "format": "float64"
          },
          "status": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "OfferInput": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "studentId": {
            "type": "integer",
            "format": "int64"
          },
          "price": {
            "type": "float",
            "format": "float64"
          },
          "category": {
            "type": "string"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "servers": [
    {
      "url": "/api"
    }
  ],
  "paths": {
    "/students": {
      "get": {
        "summary": "Get all students",
        "description": "Retrieve a list of all students.",
        "responses": {
          "200": {
            "description": "A list of students",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Student"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new student",
        "description": "Create a new student with the given properties.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StudentInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "The newly created student",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Student"
                }
              }
            }
          }
        }
      }
    },
    "/students/{id}": {
      "get": {
        "summary": "Get a student by ID",
        "description": "Retrieve a single student by their unique ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The ID of the student to retrieve",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The requested student",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Student"
                }
              }
            }
          },
          "404": {
            "description": "Student not found"
          }
        }
      },
      "put": {
        "summary": "Update a student by ID",
        "description": "Update an existing student with the given properties.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The ID of the student to update",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StudentInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The updated student",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Student"
                }
              }
            }
          },
          "404": {
            "description": "Student not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a student by ID",
        "description": "Delete a single student by their unique ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The ID of the student to delete",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Student deleted"
          },
          "404": {
            "description": "Student not found"
          }
        }
      }
    },
    "/students/{studentId}/offers": {
      "post": {
        "summary": "Add offer engagement for student",
        "parameters": [
          {
            "name": "studentId",
            "in": "path",
            "description": "ID of student to add offer engagement for",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "offerId",
            "in": "query",
            "description": "ID of offer to add engagement for",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Offer engagement added successfully"
          },
          "404": {
            "description": "Student or offer not found"
          }
        }
      },
      "delete": {
        "summary": "Remove offer engagement for student",
        "parameters": [
          {
            "name": "studentId",
            "in": "path",
            "description": "ID of student to remove offer engagement for",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "offerId",
            "in": "query",
            "description": "ID of offer to remove engagement for",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Offer engagement removed successfully"
          },
          "404": {
            "description": "Student or offer not found"
          }
        }
      }
    },
    "/students/{studentId}/helprequests": {
      "post": {
        "summary": "Add helprequest engagement for student",
        "parameters": [
          {
            "name": "studentId",
            "in": "path",
            "description": "ID of student to add helprequest engagement for",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "helprequestId",
            "in": "query",
            "description": "ID of helprequest to add engagement for",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Help Request engagement added successfully"
          },
          "404": {
            "description": "Student or helprequest not found"
          }
        }
      },
      "delete": {
        "summary": "Remove helprequest engagement for student",
        "parameters": [
          {
            "name": "studentId",
            "in": "path",
            "description": "ID of student to remove helprequest engagement for",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "helprequestId",
            "in": "query",
            "description": "ID of helprequest to remove engagement for",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Help Request engagement removed successfully"
          },
          "404": {
            "description": "Student or helprequest not found"
          }
        }
      }
    },
    "/helpRequests": {
      "get": {
        "summary": "Get all help requests",
        "parameters": [
          {
            "in": "query",
            "name": "category",
            "schema": {
              "type": "string"
            },
            "description": "Filter by category"
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by status",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "in": "query",
            "name": "studentId",
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "description": "Filter by student ID"
          }
        ],
        "responses": {
          "200": {
            "description": "List of help requests",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HelpRequest"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No help requests found"
          }
        }
      },
      "post": {
        "summary": "Create a new help request",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/HelpRequestInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Help request created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HelpRequest"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/helpRequests/{id}": {
      "get": {
        "summary": "Get a specific help request by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "required": true,
            "description": "ID of the help request to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Help request found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HelpRequest"
                }
              }
            }
          },
          "404": {
            "description": "Help request not found"
          }
        }
      },
      "put": {
        "summary": "Update a specific help request by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "required": true,
            "description": "ID of the help request to update"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/HelpRequestInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Help request updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HelpRequest"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "Help request not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a specific help request by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "required": true,
            "description": "ID of the help request to delete"
          }
        ],
        "responses": {
          "204": {
            "description": "Help request deleted successfully"
          },
          "404": {
            "description": "Help request not found"
          }
        }
      }
    },
    "/offers": {
      "get": {
        "summary": "Get all offers",
        "parameters": [
          {
            "name": "category",
            "in": "query",
            "description": "Filter by category",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by status",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "studentId",
            "in": "query",
            "description": "Filter by student ID",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Offer"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new offer",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OfferInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Offer"
                }
              }
            }
          }
        }
      }
    },
    "/offers/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Offer ID",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "get": {
        "summary": "Get an offer by ID",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Offer"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "summary": "Update an offer",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OfferInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Offer"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "summary": "Delete an offer",
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  }
}
